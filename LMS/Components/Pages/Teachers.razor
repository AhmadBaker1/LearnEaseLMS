@page "/teachers"

<div class="teachers-container">
    <h3 class="teachers-title">Teachers' Information</h3>

    @if (teachers.Any())
    {
        <div class="teacher-cards">
            @foreach (var teacher in teachers)
            {
                <div class="teacher-card">
                    <h4 class="teacher-name">@teacher.Name</h4>
                    <p class="teacher-email">Email: @teacher.Email</p>
                    <p class="teacher-rating">Average Rating: @teacher.AverageRating</p>
                    <h5 class="teaching-history-title">Teaching History</h5>
                    @if (teacher.TeachingHistory.Any())
                    {
                        <ul class="teaching-history-list">
                            @foreach (var assignment in teacher.TeachingHistory)
                            {
                                <li class="history-item">@assignment.CourseName - @assignment.Year (@assignment.Semester)</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="no-history">No teaching history available.</p>
                    }
                </div>
            }
        </div>
    }
    else
    {
        <p class="no-teachers">No teachers available.</p>
    }
</div>

